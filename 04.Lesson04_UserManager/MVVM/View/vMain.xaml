<Window x:Class="_04.Lesson04_UserManager.MVVM.View.vMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04.Lesson04_UserManager.MVVM.View"
        d:DataContext="{d:DesignInstance local:vMain}"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Title="vMain" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Ribbon>
            <RibbonApplicationMenu Visibility="Collapsed">
                <TextBlock Text="Khóa học WPF"></TextBlock>
            </RibbonApplicationMenu>
            <RibbonTab Header="Trang chủ">
                <RibbonGroup Header="Người dùng">
                    <RibbonButton Label="Thêm"
                                  Command="{Binding }">

                    </RibbonButton>
                    <RibbonButton Label="Sửa">

                    </RibbonButton>
                    <RibbonButton Label="Xóa">

                    </RibbonButton>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
    </Grid>
</Window>
